---
import Header from '../components/Header.astro';

const loggedIn = typeof window !== 'undefined' ? localStorage.getItem('loggedIn') === 'true' : false;
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<title>{title}</title>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<title>Prop√≥sito Ser Uno</title>
	</head>
	<body>
		<Header loggedIn={loggedIn} />
		<slot />
	</body>
</html>

<style is:global>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
	overflow-y: scroll;
}

body {
    font-family: 'Humanist521 BT',ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background: linear-gradient(180deg, #2a0745 0%, #591583 80%);
    background-attachment: fixed;
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
    overflow-x: hidden;
	color: #f8fafc;
    font-weight: 400;
    line-height: 1.6;
    letter-spacing: -0.025em;
}

header, main, footer {
    width: 100%;
}

a {
    text-decoration: none;
    color: inherit;
}

main {
	flex: 1;
	opacity: 0;
	animation: fadeIn 0.6s ease forwards;
}

@keyframes fadeIn {
	to {
		opacity: 1;
	}
}

@font-face {
    font-family: 'Humanist521 BT';
    src: url('../fonts/Humanst521 Lt BT Light.ttf') format('truetype');
    font-weight: 300;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Humanist521 BT';
    src: url('../fonts/Humanst521 Lt BT Light Italic.ttf') format('truetype');
    font-weight: 300;
    font-style: italic;
    font-display: swap;
}

@font-face {
    font-family: 'Humanist521 BT';
    src: url('../fonts/Humanst521 BT Roman.ttf') format('truetype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Humanist521 BT';
    src: url('../fonts/Humanst521 BT Italic.ttf') format('truetype');
    font-weight: 400;
    font-style: italic;
    font-display: swap;
}

@font-face {
    font-family: 'Humanist521 BT';
    src: url('../fonts/Humanst521 BT Bold.ttf') format('truetype');
    font-weight: 700;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Humanist521 BT';
    src: url('../fonts/Humanst521 BT Bold Italic.ttf') format('truetype');
    font-weight: 700;
    font-style: italic;
    font-display: swap;
}

@font-face {
    font-family: 'Goudy Old Style';
    src: url('../fonts/GOUDOS.TTF') format('truetype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Goudy Old Style';
    src: url('../fonts/GOUDOSB.TTF') format('truetype');
    font-weight: 700;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Goudy Old Style';
    src: url('../fonts/GOUDOSI.TTF') format('truetype');
    font-weight: 400;
    font-style: italic;
    font-display: swap;
}
</style>
