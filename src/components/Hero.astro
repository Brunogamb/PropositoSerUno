<style>
main {
    text-align: center;
    margin-top: 20px;
}

.hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
}

.hero-buttons {
    margin-top: 20px;
    display: flex;
    justify-content: center;
    gap: 32px;
    letter-spacing: 1.2px;
}

.programa, .fundadores {
    padding: 4px 24px 6px 24px;
    width: 260px;
    border-radius: 20px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    display: inline-block;
}

.programa {
    background-color: #f1f1f1;
    color: #2c0db3;
}

.programa:hover {
    box-shadow: 0 10px 30px rgba(241, 241, 241, 0.12);
}

.fundadores {
    border-color: #f1f1f1;
    color: #f1f1f1;
}

.fundadores:hover {
    background-color: #f1f1f1;
    color: #2c0db3;
    box-shadow: 0 10px 30px rgba(241, 241, 241, 0.12);
}

h1 {
    font-family: 'Playfair Display', serif;
    font-size: 62px;
    font-weight: 500;
    width: 500px;
    text-wrap: balance;
    letter-spacing: -0.5px;
    line-height: 1.3;
}

p {
    width: 660px;
    font-size: 22px;
    text-wrap: balance;
    letter-spacing: 1.5px;
    line-height: 1.5;
